					<div class="why-we__items">
						{items.map((item) => (
							<div class="why-we__item">
								<div class="why-we__item-title">
									<div class="why-we__item-title-inner" set:html={item.title}></div>
								</div>
								<div class="why-we__item-text">
									<p set:html={item.text}></p>
