---
import ButtonIcon from '@components/modules/ButtonIcon.astro';

interface Props {
	type?: 'resort';
    title?: string;
    price?: string;
    period?: string;
    image?: string;
    image2x?: string;
    class?: string;
    [x: string]: any;
}

const {
	type,
	title,
	price,
	period,
	image,
	image2x,
    infoList = [],
	class: className,
	...rest
} = Astro.props;

---

<div
	class:list={[
		'chalet-small-card',
		className
	]}
	{...rest}
>
    <a href="" class="chalet-small-card__link">
        <div class="chalet-small-card__image-box">
            <img class="chalet-small-card__image" src={image} srcset={image2x} width="194" height="128" alt="" />
        </div>
        <div class="chalet-small-card__content">
            <div class="chalet-small-card__row">
                <div class="chalet-small-card__title" set:html={title}></div>
                <div class="chalet-small-card__price" set:html={price}></div>
                <div class="chalet-small-card__period" set:html={period}></div>
            </div>
            {
                infoList.length ?
                <div class="chalet-small-card__info">
                    {infoList.map((item) => (
                        <div class="chalet-small-card__info-item">
                            <div class="chalet-small-card__info-title" set:html={item.title}></div>
                            <div class="chalet-small-card__info-value" set:html={item.value}></div>
                        </div>
                    ))}
                </div> : ''
            }
            <div class="chalet-small-card__more">
                <span class="chalet-small-card__more-link">Узнать больше</span>
            </div>
        </div>
    </a>
</div>
